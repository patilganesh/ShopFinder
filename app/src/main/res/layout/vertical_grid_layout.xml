<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/gray_border_layout"
    android:orientation="vertical"
    android:padding="2dp">
    <!-- <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="2dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <com.gajananmotors.shopfinder.helper.CircleImageView
            android:id="@+id/category_imgs_vertical"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/new_shop_image"
            app:civ_border_color="@color/colorGraylight"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/category_name_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_imgs"
            android:layout_gravity="center"
            android:paddingTop="3dp"
            android:text="This is Just Dummy Text"
            android:textAlignment="center"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>