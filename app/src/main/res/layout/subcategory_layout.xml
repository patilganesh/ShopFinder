<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.gajananmotors.shopfinder.helper.CircleImageView

        android:id="@+id/imgsubcategory"
        androidutlineProvider="bounds"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/new_shop_image"
        app:civ_border_width="1dp"
        app:civ_fill_color="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txtsubcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Public Hospitals"
        android:textColor="@color/colorBlack" />
</LinearLayout>